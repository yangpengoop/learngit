<script>
    //修改
	$('.modify').click(function(){
	    var id = $(this).attr('idval');
	     $('#editId').val(id);
			$.post("{:url('/Nav/getNavInfo')}",{id:id},function(result){
				result = JSON.parse(result);
				$('#perName').val(result.name);
				$('#perUrl').val(result.mca);
				$('#perIco').val(result.ico);
			});
	});
   //点击子菜单的时候添加隐藏的表单值id
   $('.addSubMenu').click(function(){
       var id = $(this).attr('idval');   
        $('#addSubid').val(id);
   });   
   
   //修改子菜单
   $('.edit').click(function(){
       var id = $(this).attr('idval');
       $('#editId').val(id);
  }); 
   
    //点击删除菜单
    $(function(){
    	$(".del_navivd").click(function(){
    		subDelNav($(this));
    	})
    })  
   
   function subDelNav(_this)
   {
	   layer.confirm(
         "<span style='color:#fff'>確定删除嗎？</span>", 
	     {
		      title:"*提示",
			  btn: ["確定","取消"]
	     }, 
	     function(){
			  var nav_id=_this.attr('navid');
			  window.location.href="/Nav/delMenu/id/"+nav_id;
		});  
   }
</script>
